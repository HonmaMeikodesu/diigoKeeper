{
    "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": false,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./build/",
      "lib": ["ES5", "ES6", "ES2021"],
      "target": "ES6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }